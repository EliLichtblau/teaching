{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "jsx": "react",
        // This is essentially isolatedModules with
        // the added restriction that you cannot use import export
        // syntax in cjs nor require in mjs
        "verbatimModuleSyntax": true,
        "rootDir": "./src",
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true
    }
}